{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "baseUrl": "",
    "paths": {
      "@/data/*": [
        "data/*"
      ],
      "@/lib/*": [
        "lib/*"
      ],
      "@/interfaces": [
        "interfaces"
      ],
      "@/interfaces/*": [
        "interfaces/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/context/*": [
        "src/context/*"
      ],
      "@/helpers": [
        "src/helpers"
      ],
      "@/helpers/*": [
        "src/helpers/*"
      ],
      "@/hooks/*": [
        "src/hooks/*"
      ],
      "@/hocs/*": [
        "src/hocs/*"
      ],
      "@/style/*": [
        "src/style/*"
      ],
      "@/recoil": [
        "src/recoil"
      ],
      "@/recoil/*": [
        "src/recoil/*"
      ],
      "@/icons": [
        "src/icons"
      ],
      "@/icons/*": [
        "src/icons/*"
      ]
    },
    "incremental": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
